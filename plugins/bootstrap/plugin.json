{
  "$schema": "https://mdplusplus.dev/schemas/plugin.json",
  "id": "bootstrap",
  "name": "Bootstrap 5 Components",
  "version": "1.0.0",
  "author": "MD++ Team",
  "description": "Bootstrap 5 UI components for MD++. Includes cards, alerts, badges, buttons, modals, tabs, and more.",
  "license": "MIT",

  "type": "components",

  "assets": {
    "css": [
      "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    ],
    "js": [
      "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ]
  },

  "components": {
    "card": {
      "tag": "div",
      "classes": ["card"],
      "allowNesting": true,
      "description": "Bootstrap card container",
      "structure": {
        "header": { "tag": "div", "classes": ["card-header"] },
        "body": { "tag": "div", "classes": ["card-body"] },
        "footer": { "tag": "div", "classes": ["card-footer"] }
      }
    },
    "alert": {
      "tag": "div",
      "classes": ["alert"],
      "description": "Bootstrap alert message",
      "variants": {
        "primary": ["alert-primary"],
        "secondary": ["alert-secondary"],
        "success": ["alert-success"],
        "danger": ["alert-danger"],
        "warning": ["alert-warning"],
        "info": ["alert-info"],
        "light": ["alert-light"],
        "dark": ["alert-dark"]
      }
    },
    "badge": {
      "tag": "span",
      "classes": ["badge"],
      "description": "Bootstrap badge/label",
      "variants": {
        "primary": ["bg-primary"],
        "secondary": ["bg-secondary"],
        "success": ["bg-success"],
        "danger": ["bg-danger"],
        "warning": ["bg-warning", "text-dark"],
        "info": ["bg-info", "text-dark"],
        "light": ["bg-light", "text-dark"],
        "dark": ["bg-dark"]
      }
    },
    "button": {
      "tag": "button",
      "classes": ["btn"],
      "description": "Bootstrap button",
      "variants": {
        "primary": ["btn-primary"],
        "secondary": ["btn-secondary"],
        "success": ["btn-success"],
        "danger": ["btn-danger"],
        "warning": ["btn-warning"],
        "info": ["btn-info"],
        "outline-primary": ["btn-outline-primary"],
        "outline-secondary": ["btn-outline-secondary"]
      }
    },
    "container": {
      "tag": "div",
      "classes": ["container"],
      "allowNesting": true,
      "description": "Bootstrap container",
      "variants": {
        "fluid": ["container-fluid"],
        "sm": ["container-sm"],
        "md": ["container-md"],
        "lg": ["container-lg"],
        "xl": ["container-xl"]
      }
    },
    "row": {
      "tag": "div",
      "classes": ["row"],
      "allowNesting": true,
      "description": "Bootstrap grid row"
    },
    "col": {
      "tag": "div",
      "classes": ["col"],
      "description": "Bootstrap grid column",
      "variants": {
        "1": ["col-1"], "2": ["col-2"], "3": ["col-3"], "4": ["col-4"],
        "5": ["col-5"], "6": ["col-6"], "7": ["col-7"], "8": ["col-8"],
        "9": ["col-9"], "10": ["col-10"], "11": ["col-11"], "12": ["col-12"],
        "auto": ["col-auto"]
      }
    },
    "accordion": {
      "tag": "div",
      "classes": ["accordion"],
      "allowNesting": true,
      "description": "Bootstrap accordion container"
    },
    "accordion-item": {
      "tag": "div",
      "classes": ["accordion-item"],
      "description": "Bootstrap accordion item"
    },
    "list-group": {
      "tag": "ul",
      "classes": ["list-group"],
      "allowNesting": true,
      "description": "Bootstrap list group"
    },
    "list-group-item": {
      "tag": "li",
      "classes": ["list-group-item"],
      "description": "Bootstrap list group item"
    },
    "spinner": {
      "tag": "div",
      "classes": ["spinner-border"],
      "description": "Bootstrap loading spinner",
      "variants": {
        "primary": ["text-primary"],
        "secondary": ["text-secondary"],
        "success": ["text-success"],
        "danger": ["text-danger"],
        "grow": ["spinner-grow"]
      }
    },
    "progress": {
      "tag": "div",
      "classes": ["progress"],
      "allowNesting": true,
      "description": "Bootstrap progress bar container"
    },
    "progress-bar": {
      "tag": "div",
      "classes": ["progress-bar"],
      "description": "Bootstrap progress bar",
      "variants": {
        "success": ["bg-success"],
        "info": ["bg-info"],
        "warning": ["bg-warning"],
        "danger": ["bg-danger"],
        "striped": ["progress-bar-striped"],
        "animated": ["progress-bar-striped", "progress-bar-animated"]
      }
    },
    "modal": {
      "tag": "div",
      "classes": ["modal", "fade"],
      "allowNesting": true,
      "description": "Bootstrap modal dialog",
      "variants": {
        "lg": ["modal-lg"],
        "sm": ["modal-sm"],
        "xl": ["modal-xl"],
        "centered": ["modal-dialog-centered"]
      }
    },
    "modal-dialog": {
      "tag": "div",
      "classes": ["modal-dialog"],
      "allowNesting": true
    },
    "modal-content": {
      "tag": "div",
      "classes": ["modal-content"],
      "allowNesting": true
    },
    "modal-header": {
      "tag": "div",
      "classes": ["modal-header"]
    },
    "modal-body": {
      "tag": "div",
      "classes": ["modal-body"]
    },
    "modal-footer": {
      "tag": "div",
      "classes": ["modal-footer"]
    },
    "tabs": {
      "tag": "ul",
      "classes": ["nav", "nav-tabs"],
      "allowNesting": true,
      "description": "Bootstrap tab navigation"
    },
    "tab-content": {
      "tag": "div",
      "classes": ["tab-content"],
      "allowNesting": true
    },
    "tab-pane": {
      "tag": "div",
      "classes": ["tab-pane", "fade"],
      "variants": {
        "active": ["show", "active"]
      }
    },
    "table": {
      "tag": "table",
      "classes": ["table"],
      "description": "Bootstrap styled table",
      "variants": {
        "striped": ["table-striped"],
        "bordered": ["table-bordered"],
        "hover": ["table-hover"],
        "dark": ["table-dark"],
        "sm": ["table-sm"]
      }
    },
    "dropdown": {
      "tag": "div",
      "classes": ["dropdown"],
      "allowNesting": true,
      "description": "Bootstrap dropdown container"
    },
    "dropdown-menu": {
      "tag": "ul",
      "classes": ["dropdown-menu"],
      "allowNesting": true
    },
    "dropdown-item": {
      "tag": "li",
      "classes": []
    },
    "toast": {
      "tag": "div",
      "classes": ["toast"],
      "allowNesting": true,
      "description": "Bootstrap toast notification"
    },
    "toast-header": {
      "tag": "div",
      "classes": ["toast-header"]
    },
    "toast-body": {
      "tag": "div",
      "classes": ["toast-body"]
    }
  },

  "categories": ["ui", "css-framework"],
  "keywords": ["bootstrap", "ui", "components", "css", "responsive"],

  "minAppVersion": "1.0.0"
}
