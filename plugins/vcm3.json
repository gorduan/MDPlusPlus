{
  "framework": "vcm3",
  "version": "1.0.0",
  "author": "VCM3 Team",
  "description": "VCM3 native components for vibecoding",
  "components": {
    "card": {
      "tag": "div",
      "classes": ["vcm3-card", "rounded-lg", "border", "p-4", "shadow-sm", "bg-card"],
      "allowNesting": true,
      "structure": {
        "header": {
          "tag": "div",
          "classes": ["font-semibold", "text-lg", "mb-2"]
        },
        "body": {
          "tag": "div",
          "classes": ["text-muted-foreground"]
        },
        "footer": {
          "tag": "div",
          "classes": ["mt-4", "pt-2", "border-t"]
        }
      }
    },
    "alert": {
      "tag": "div",
      "classes": ["vcm3-alert", "rounded-md", "p-4", "flex", "items-start", "gap-3"],
      "variants": {
        "info": ["bg-blue-50", "text-blue-800", "border", "border-blue-200"],
        "success": ["bg-green-50", "text-green-800", "border", "border-green-200"],
        "warning": ["bg-yellow-50", "text-yellow-800", "border", "border-yellow-200"],
        "error": ["bg-red-50", "text-red-800", "border", "border-red-200"],
        "default": ["bg-muted", "text-muted-foreground", "border"]
      }
    },
    "callout": {
      "tag": "div",
      "classes": ["vcm3-callout", "border-l-4", "border-primary", "bg-primary/5", "p-4", "rounded-r-md"],
      "structure": {
        "title": {
          "tag": "p",
          "classes": ["font-semibold", "mb-2"]
        },
        "content": {
          "tag": "div",
          "classes": ["text-sm"]
        }
      }
    },
    "code": {
      "tag": "div",
      "classes": ["vcm3-code", "bg-zinc-900", "text-zinc-100", "rounded-md", "p-4", "font-mono", "text-sm", "overflow-x-auto"]
    },
    "tabs": {
      "tag": "div",
      "classes": ["vcm3-tabs", "border", "rounded-lg"],
      "allowNesting": true
    },
    "tab": {
      "tag": "div",
      "classes": ["vcm3-tab", "p-4"]
    },
    "accordion": {
      "tag": "div",
      "classes": ["vcm3-accordion", "border", "rounded-lg", "divide-y"],
      "allowNesting": true
    },
    "accordion-item": {
      "tag": "div",
      "classes": ["vcm3-accordion-item"]
    },
    "badge": {
      "tag": "span",
      "classes": ["vcm3-badge", "inline-flex", "items-center", "px-2.5", "py-0.5", "rounded-full", "text-xs", "font-medium"],
      "variants": {
        "default": ["bg-primary", "text-primary-foreground"],
        "secondary": ["bg-secondary", "text-secondary-foreground"],
        "success": ["bg-green-100", "text-green-800"],
        "warning": ["bg-yellow-100", "text-yellow-800"],
        "error": ["bg-red-100", "text-red-800"]
      }
    },
    "button": {
      "tag": "button",
      "classes": ["vcm3-button", "inline-flex", "items-center", "justify-center", "rounded-md", "px-4", "py-2", "text-sm", "font-medium", "transition-colors"],
      "variants": {
        "default": ["bg-primary", "text-primary-foreground", "hover:bg-primary/90"],
        "secondary": ["bg-secondary", "text-secondary-foreground", "hover:bg-secondary/80"],
        "outline": ["border", "border-input", "bg-background", "hover:bg-accent"],
        "ghost": ["hover:bg-accent", "hover:text-accent-foreground"]
      }
    },
    "ai-context": {
      "tag": "div",
      "classes": ["mdpp-ai-context"],
      "hidden": true,
      "aiVisible": true
    },
    "feature": {
      "tag": "div",
      "classes": ["vcm3-feature", "p-6", "rounded-lg", "border", "bg-card", "hover:shadow-md", "transition-shadow"],
      "structure": {
        "icon": {
          "tag": "div",
          "classes": ["text-primary", "mb-4"]
        },
        "title": {
          "tag": "h3",
          "classes": ["font-semibold", "text-lg", "mb-2"]
        },
        "description": {
          "tag": "p",
          "classes": ["text-muted-foreground", "text-sm"]
        }
      }
    },
    "grid": {
      "tag": "div",
      "classes": ["vcm3-grid", "grid", "gap-4"],
      "variants": {
        "2": ["grid-cols-2"],
        "3": ["grid-cols-3"],
        "4": ["grid-cols-4"]
      }
    }
  }
}
