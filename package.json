{
  "name": "@gorduan/mdplusplus",
  "version": "0.5.0",
  "description": "MD++ (Markdown Plus Plus) - Pure JavaScript Markdown Parser with AI Context Blocks, React Components & Desktop App",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": "./dist/mdplusplus.browser.global.js",
  "unpkg": "./dist/mdplusplus.browser.global.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./browser": "./dist/mdplusplus.browser.global.js",
    "./editor": {
      "import": "./dist/components/MDPPEditor.js",
      "types": "./dist/components/MDPPEditor.d.ts"
    },
    "./preview": {
      "import": "./dist/components/MDPPPreview.js",
      "types": "./dist/components/MDPPPreview.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./plugins/*": "./plugins/*"
  },
  "files": [
    "dist",
    "plugins",
    "examples"
  ],
  "scripts": {
    "build": "tsup",
    "build:parser": "tsup src/index.ts --format esm --dts --outDir dist",
    "build:browser": "tsup src/index.ts --format iife --globalName MDPlusPlus --outDir dist --minify --no-splitting --platform browser",
    "build:components": "tsup components/index.ts --format esm --dts --outDir dist/components --external react --external react-dom",
    "dev": "tsup --watch",
    "clean": "rimraf dist out",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "prepublishOnly": "npm run build",
    "electron:dev": "electron-vite dev",
    "electron:start": "electron-vite build && node scripts/start-electron.js",
    "electron:build": "electron-vite build && electron-builder",
    "electron:preview": "electron-vite preview"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gorduan/MDPlusPlus.git"
  },
  "bugs": {
    "url": "https://github.com/gorduan/MDPlusPlus/issues"
  },
  "homepage": "https://github.com/gorduan/MDPlusPlus#readme",
  "dependencies": {
    "@tiptap/core": "^3.14.0",
    "@tiptap/extension-bubble-menu": "^3.14.0",
    "@tiptap/extension-code-block-lowlight": "^3.14.0",
    "@tiptap/extension-highlight": "^3.14.0",
    "@tiptap/extension-image": "^3.14.0",
    "@tiptap/extension-link": "^3.14.0",
    "@tiptap/extension-table": "^3.14.0",
    "@tiptap/extension-table-cell": "^3.14.0",
    "@tiptap/extension-table-header": "^3.14.0",
    "@tiptap/extension-table-row": "^3.14.0",
    "@tiptap/extension-typography": "^3.14.0",
    "@tiptap/pm": "^3.14.0",
    "@tiptap/react": "^3.14.0",
    "@tiptap/starter-kit": "^3.14.0",
    "@types/dagre": "^0.7.53",
    "@xyflow/react": "^12.10.0",
    "dagre": "^0.8.5",
    "gray-matter": "^4.0.3",
    "hastscript": "^9.0.1",
    "highlight.js": "^11.11.1",
    "i18next": "^25.7.4",
    "katex": "^0.16.27",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.562.0",
    "mermaid": "^11.12.2",
    "react-colorful": "^5.6.1",
    "react-i18next": "^16.5.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-directive": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "unified": "^11.0.4",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.23",
    "buffer": "^6.0.3",
    "electron": "^33.4.11",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "monaco-editor": "^0.45.0",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "sass-embedded": "^1.97.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "build": {
    "appId": "com.gorduan.mdplusplus",
    "productName": "MD++",
    "directories": {
      "output": "out"
    },
    "files": [
      "out/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icon.png"
    }
  },
  "keywords": [
    "markdown",
    "md++",
    "mdplusplus",
    "parser",
    "javascript",
    "browser",
    "vanilla-js",
    "ai-context",
    "directives",
    "plugins",
    "editor",
    "react",
    "components",
    "embeddable",
    "electron",
    "monaco"
  ],
  "author": "gorduan",
  "license": "MIT",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
